/**
* Variables $
*/
@import "variable.styl"

html, body
    font-size $global_font_text
    line-height $global_inline_height

/**
* input, textarea, button, select Common Style
*/
input, textarea, select
    &.lumi-input-liner
        background-color: rgba(255,255,255,.32)
        font-size: $global_font_text
        line-height: $global_inline_height
        // animation style
        border-bottom: 3px solid $light_grey
        padding-bottom: 3px
        transition-property: border-bottom padding-bottom
        transition-duration: 0.2s
        &:hover
            padding-bottom: 0px
            border-bottom: 6px solid $light_grey
            transition-property: border-bottom padding-bottom
            transition-duration: 0.2s
        &:focus
            padding-bottom: 0px
            border-bottom: 6px solid $light_grey_focused
            transition-property: border-bottom padding-bottom
            transition-duration: 0.2s
        &.lumi-liner-white
            border-bottom-color: rgba(255,255,255,0.4)
            &:hover
                border-bottom-color: white
            &:focus
                border-bottom-color: white

/**
* Button Style
*/
button
    font-weight 500
    text-align center
    padding-left ($global_font_text * 0.7)
    padding-right ($global_font_text * 0.7)
    white-space pre
    &.lumi-button-liner
        font-size: $global_font_text
        line-height: $global_inline_height
        // animation style
        padding-bottom: 3px
        border-bottom: 3px solid $light_grey
        // background-color: rgba(0,0,0,0)
        transition-property: border-bottom border-top padding-top background-color
        transition-duration: 0.5s
        &:hover
            padding-bottom: 0px
            // background-color: rgba(0,0,0,0.25)
            border-bottom: 6px solid $light_grey_focused
            transition-property: border-bottom border-top padding-top background-color
            transition-duration: 0.5s
        &:disabled
            padding-bottom: 3px
            border-bottom: 3px solid $light_grey
            background-color: rgba(0,0,0,0)
            transition-property: none
        &.lumi-liner-white
            border-bottom-color: white
            &:hover
                border-bottom-color: white
            &:focus
                border-bottom-color: white
    &.lumi-button
        min-width ($global_font_text * 2)
        border-radius ( ($global_font_text / 2) + ($global_font_text / 4) )
        padding-top ($global_font_text / 2)
        padding-bottom ($global_font_text / 2)
        line-height $global_inline_height
        background rgba(255,255,255,0.45)
        overflow hidden
        -ms-user-select none
        -moz-user-select -moz-none
        -khtml-user-select none
        -webkit-user-select none
        user-select none
        // transition
        transition-property: box-shadow
        transition-duration: 0.3s
        &.lumi-button-border-round
            border-radius $global_inline_height
        &.lumi-button-shadow
            box-shadow 0px 0px 5px $lumi_opacity_black_level_1
            // transition
            transition-property: box-shadow
            transition-duration: 0.3s
        &:hover
            background rgba(255,255,255,0.7)
            box-shadow 0px 0px 12px $lumi_opacity_black_level_2
            // transition
            transition-property: box-shadow
            transition-duration: 0.3s
        &:disabled
            box-shadow none
            opacity 0.5
        &:active
            background rgba(255,255,255,0.9)
            box-shadow 0px 0px 12px rgba(0,0,0,0.7)
        &.selected
            background rgba(255,255,255,0.9)
            box-shadow 0px 0px 12px $lumi_opacity_black_level_2
        &.lumi-button-black
            background rgba(0,0,0,0.7)
            color white
        &.lumi-button-block-white
            background white
            color $light_black
            &:active
                background $forced_white
                box-shadow 0px 0px 12px rgba(0,0,0,0.9)



/**
* Border Style
*/
.lumi-box-border
    border 1px solid $light_grey

/**
* Select Style
*/
.lumi-select
    min-width 200px
    position relative
    &:after
        content: 'â–¼';
        line-height: $global_inline_height
        font: $global_font_text "Consolas" monospace
        color: $light_grey
        position: absolute;
        pointer-events: none;
        bottom 3px
        right 5px


/**
* Utility Styles
*/
.lumi-input-group, .lumi-button-group .lumi-flex-box
    display flex
    input, button, .lumi-flex-box-item
        flex 1
        margin-left: 5%
        margin-right: 5%
        &.first-child
            margin-left: 0
        $.last-child
            margin-right: 0
    &.lumi-flex-column
        flex-direction: column

/**
* Box Styles
*/
.lumi-box
    border-radius: ( ($global_font_text / 2) + ($global_font_text / 4) )
    padding-top t = ($global_font_text/2)
    padding-bottom ($global_font_text/2)
    padding-left ps = $global_font_text
    padding-right $global_font_text
    line-height: $global_inline_height
    background rgba(255,255,255,0.45)
    overflow: hidden
    // &.lumi-box-border
    //     border: 1px solid $light_grey
    .lumi-box-header
        margin-top -(t)
        margin-left -(ps)
        margin-right -(ps)
        padding-top t
        padding-bottom ps
        margin-bottom ps

.lumi-box
    &.lumi-box-block-white
        text-shadow none
        background white
        color $light_black
        &.lumi-box-shadow
            box-shadow 0px 0px 5px rgba(0,0,0,0.7)

/**
* Table Styles
*/
table.lumi-table
    th
        font-weight: strong
        border-bottom: 2px solid $light_grey
    tr
        td
            border-bottom: 2px solid $light_grey

/**
* Select List Group
*/
.lumi-box
    ul.lumi-list-select-group
        font-weight 600
        margin-left -($global_font_text)
        margin-right -($global_font_text)
        color white
        li.lumi-list-select-item
            padding-top 10px
            padding-bottom 10px
            border-bottom solid $light_grey 1px
            // :hover transition
            transition-property: background color
            transition-duration: 0.5s
            &.selected
                background rgba(255,255,255,0.6)
            &:first-child
                border-top solid $light_grey 1px
            &:hover
                background rgba(255,255,255,0.9)
                color $light_grey_focused
                cursor pointer
                // transition
                transition-property: background color
                transition-duration: 0.5s